#!/usr/bin/env php
<?php

// unset time limit since the commands may take a while
set_time_limit(0);

require __DIR__ . '/../vendor/autoload.php';

// dependencies
$config = new GitS3\Wrapper\Config(__DIR__ . '/../config.yml');
$history = new GitS3\Wrapper\History(__DIR__ . '/../history.lock');

// start application
$app = new GitS3\Console\Application($config, $history);
$app->run();